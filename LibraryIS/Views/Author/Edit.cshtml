@model Author


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Id">AuthorId</label>
        <input asp-for="Id" readonly class="form-control" value="@ViewBag.AuthorId" style="margin-bottom: 1rem;">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName">ФИО автора</label>
        <input asp-for="FullName" class="form-control" placeholder="Title">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
   
 
    <button type="submit" class="btn btn-primary">Submit</button>
</form>