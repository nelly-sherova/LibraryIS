@model IEnumerable<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories</title>
</head>
<body>
    <h1>Удаленные пользователи</h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Дата рождения</th>
                <th>Электронный адрес</th>
                <th>Номер телефона</th>
                <th>Роль</th>
                <th>Подробно</th>
                <th>Восстановить</th>
                <th>Удалить</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.DateOfBirth</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Role.Name</td>

                    <td>

                        <a href="../User/Details?id=@user.Id">Details</a>


                    </td>
                    <td>

                        <a href="../User/Restore?id=@user.Id">Восстановить</a>


                    </td>
                      <td>

                        <a href="../User/Delete?id=@user.Id">Удалить навсегда</a>


                    </td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>


