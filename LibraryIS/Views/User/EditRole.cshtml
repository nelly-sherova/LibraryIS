@model User
<form method="post" asp-action="EditRole" enctype="multipart/form-data">
    <div class="col-md-12">
        <label asp-for="Id" class="labels">UserId</label>
        <input asp-for="Id" type="text" readonly class="form-control" value="@ViewBag.UserId" style="margin-bottom: 1rem;">
    </div>
    <div class="col-md-12">
        <label  class="labels">Пользователь</label>
        <input type="text" readonly class="form-control" value="@ViewBag.Name" style="margin-bottom: 1rem;">
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Роль пользователя</label>
        <select asp-for="RoleId" class="form-control" style="margin-bottom: 1rem;">
            <option value="">--Выберите--</option>
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>