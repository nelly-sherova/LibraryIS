@model IEnumerable<Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories</title>
</head>
<body>
    <h1>Удаленные категории</h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>О категории</th>
                <th>Восстановить</th>
                <th>Удалить</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>

                    <td><a href="../Category/Restore?id=@category.Id">Восстановить</a></td>
                    <td><a href="../Category/Delete?id=@category.Id">Удалить навсегда</a></td>

                </tr>
            }

        </tbody>
    </table>
   
</body>
</html>


