@model IEnumerable<Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories</title>
</head>
<body>
    <h1>Categories</h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>ФИО</th>
                <th>Об авторе</th>
                <th>Подробно</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>

                    <td><a href="Book/Details?id=@category.Id">Details</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="Category/Create" class="btn btn-primary">Добавить</a>
</body>
</html>

