@model Category

<form method="post" asp-action="Edit" enctype="multipart/form-data">
  <div class="form-group">
        <label asp-for="Id">CategoryId</label>
        <input asp-for="Id" readonly class="form-control" value="@ViewBag.CategoryId" style="margin-bottom: 1rem;">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>