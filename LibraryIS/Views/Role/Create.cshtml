@model Role

<div class="container">
    <form method="post" asp-action="Create">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Name"> Название</label>
                    <input asp-for="Name" class="form-control" placeholder="Название" style="margin-bottom: 1rem;">
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Description">Описание</label>
                    <input asp-for="Description" class="form-control" placeholder="Описание" style="margin-bottom: 1rem;">
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            
            <div class="col-12 mt-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>