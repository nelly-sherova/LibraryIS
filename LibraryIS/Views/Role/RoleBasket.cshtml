@model IEnumerable<Role>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Roles</title>
</head>
<body>
    <h1> Удаленные роли пользователей</h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Восстановаить</th>
                <th>Удалить</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td><a href="../Role/Restore?id=@role.Id">Восстановить</a></td>
                    <td><a href="../Role/Delete?id=@role.Id">Удалить навсегда</a></td>
                </tr>
            }



        </tbody>
    </table>

</body>
</html>

