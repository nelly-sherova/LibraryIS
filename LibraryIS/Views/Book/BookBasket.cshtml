@model IEnumerable<Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Books</title>
</head>
<body>
    <h1>Список удаленных книг</h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <td>Идентификатор</td>
                <th>Название</th>
                <th>Публикация</th>
                <th>Состояние</th>
                <th>Язык</th>
                <th>Подробно</th>
                <th>Восстановить</th>
                <th>Удалить</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Publication</td>
                    <td>@book.State</td>
                    <td>@book.Language</td>
                    <td><a href="Details?id=@book.Id">Details</a></td>
                    <td><a href="Restore?id=@book.Id">Восстановить</a></td>
                    <td><a href="Delete?id=@book.Id">Удалить навсегда</a></td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>