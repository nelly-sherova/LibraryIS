@model IEnumerable<BookIndexViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Books</title>
</head>
<body>
    <h1>Список книг</h1>


    <table class="table table-hover">
        <thead>
            <tr>
              
                <th>Название</th>
               
                <th>Количество</th>
               
                <th>Подробно</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                   
                    <td>@book.Name</td>

                    <td>@book.BookCount</td>
                    
                    <td><a href="../Book/DetailsCollection?name=@book.Name">Details</a></td> 
                </tr>
            }
           
        </tbody>
    </table>
    <a href="../Book/Create" class="btn btn-primary">Добавить</a>
    <a href="../Book/Overdue" class="btn btn-primary">Задолжники</a>
</body>
</html>