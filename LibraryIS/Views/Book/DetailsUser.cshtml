@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/UserLayout.cshtml";
}
@model Book

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>

            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Model.PicUrl" width="300" height="400" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">О книге</h4>
                    <p>@Model.Description</p>

                



                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Подробнее</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Название</td>
                                    <td>Описание</td>
                                </tr>
                                <tr>
                                    <td>Идентификатор</td>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <td>Название</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td>Автор</td>
                                    <td>
                                        @foreach (var item in Model.BookAuthor)
                                        {
                                            @item.Author.FullName
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Категория</td>

                                    <td>
                                        @foreach (var item in Model.BookCategory)
                                        {
                                            @String.Format("{0} ", item.Category.Name)
                                        }
                                    </td>

                                </tr>
                                <tr>
                                    <td>Состояние</td>
                                    <td>@Model.State</td>
                                </tr>
                                <tr>
                                    <td>Состояние занятости</td>
                                    @if (Model.IsFramed == true)
                                    {
                                        <td style="color: red ; font-weight: bold">Занята</td>
                                    }
                                    @if (Model.IsFramed == false)
                                    {
                                        <td style="color: #00FF00; font-weight: bold">Свободна</td>
                                    }
                                </tr>
                                <tr>
                                    <td>Язык</td>
                                    <td>@Model.Language</td>
                                </tr>
                                <tr>
                                    <td>Публикация</td>
                                    <td>@Model.Publication</td>
                                </tr>
                                <tr>
                                    <td>Дата публикации</td>
                                    <td>@Model.PublicationDate</td>
                                </tr>
                                <tr>
                                    <td>Город публикации</td>
                                    <td>@Model.PublicationCity</td>
                                </tr>
                                <tr>
                                    <td>Переплет</td>
                                    <td>@Model.Binding</td>
                                </tr>
                                <tr>
                                    <td>Количество страниц</td>
                                    <td>@Model.CountOfPages</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
